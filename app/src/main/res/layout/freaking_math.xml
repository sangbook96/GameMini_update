<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#630763"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressBar_freaking"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/txtSo1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="118dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#f502f5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/txtSo1"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/txtSo1"
        android:gravity="center"
        android:text="+"
        android:textColor="#260ff7" />

    <TextView
        android:id="@+id/txtSo2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/textView7"
        android:gravity="center"
        android:text="2"
        android:textColor="#f502f5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView7"

        android:layout_below="@+id/textView7"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="=" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="KQ"
        android:textColor="#f70359"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btTrue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/txtKetQua"
        android:text="True" />

    <Button
        android:id="@+id/btFalse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/txtSo2"
        android:layout_alignTop="@+id/btTrue"
        android:layout_marginStart="22dp"
        android:text="False" />

    <TextView
        android:id="@+id/txtDiemCuaBan"
        android:background="@drawable/botron"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/progressBar_freaking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="0" />


</RelativeLayout>