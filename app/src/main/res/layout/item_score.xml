<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/img_highScore"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/txtName_Score"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:gravity="center"
            android:layout_marginStart="18dp"
            android:text="Sang"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_highScore" />

        <TextView
            android:id="@+id/txtDiem_Score"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:gravity="center"
            android:text="Diem"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtTime_Score"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:gravity="center"
                android:text="Time"
                android:layout_marginEnd="19dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/txtLevel_Score" />

            <TextView
            android:id="@+id/txtLevel_Score"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtTime_Score"
            android:layout_marginEnd="7dp"
            android:gravity="center"
            android:text="Level" />

</RelativeLayout>